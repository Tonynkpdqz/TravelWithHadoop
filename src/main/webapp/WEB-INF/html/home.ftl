    $('#addcity').click(function() {
        $.post('/UserAction/addPlacePreference',
                {
                    cityname: $('#cityname').val(),
                    citypreference: $('#citypreference').val()
                },
                function(data, status) {
            		$('#afteradd').empty();
                    if (data == '0') {
                        createPopOver('#cityname', 'right', 'cityname can not be empty ', 'show');
                    } else if (data == '1') {
                        createPopOver('#citypreference', 'right', ' this can not be empty', 'show');
                    }else if (data == '3') {
                        $('#afteradd').empty();
                        $('#afteradd').html("添加成功！");
                    }else if (data == '4') {
                        $('#afteradd').empty();
                        $('#afteradd').html("添加失败");
                    }
                });
    });
    $('#addcity2').click(function() {
        $.post('/UserAction/addPlacePreference',
                {
                    cityname: $('#cityname2').val(),
                    citypreference: $('#citypreference2').val()
                },
                function(data, status) {
                    $('#afteradd2').empty();
                    if (data == '0') {
                        createPopOver('#cityname2', 'right', 'cityname can not be empty ', 'show');
                    } else if (data == '1') {
                        createPopOver('#citypreference2', 'right', ' this can not be empty', 'show');
                    }else if (data == '3') {
                        $('#afteradd2').empty();
                        $('#afteradd2').html("添加成功！");
                    }else if (data == '4') {
                        $('#afteradd2').empty();
                        $('#afteradd2').html("添加失败");
                    }
                });
    });

    //显示弹出框
    function createPopOver(id, placement, content, action) {
        $(id).popover({
            placement: placement,
            content: content
        });
        $(id).popover(action);
    }

    $('#cityname').click(function() {
        $('#cityname').popover('destroy');
    });
    $('#cityname2').click(function() {
        $('#cityname2').popover('destroy');
    });
    $('#citypreference').click(function() {
        $('#citypreference').popover('destroy');
    });
